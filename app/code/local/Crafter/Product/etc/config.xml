<?xml version="1.0"?>
<config>
  <modules>
    <Crafter_Product>
      <version>0.1.0</version>
    </Crafter_Product>
  </modules>
  <frontend>
    <routers>
      <product>
        <use>standard</use>
          <args>
            <module>Crafter_Product</module>
            <frontName>product</frontName>
          </args>
      </product>
    </routers>
		<layout>
		  <updates>
			<product>
			  <file>product.xml</file>
			</product>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <product>
        <class>Crafter_Product_Helper</class>
      </product>
    </helpers>
	<blocks>
	  <product>
		<class>Crafter_Product_Block</class>
	  </product>
	</blocks>
    <models>
      <article>
      <class>Crafter_Product_Model_Article</class>
      </article>
    </models>
  </global>
</config> 