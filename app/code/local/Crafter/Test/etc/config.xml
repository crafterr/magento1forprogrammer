<?xml version="1.0"?>
<config>
  <modules>
    <Crafter_Test>
      <version>0.1.0</version>
    </Crafter_Test>
  </modules>
  <frontend>
    <routers>
      <test>
        <use>standard</use>
          <args>
            <module>Crafter_Test</module>
            <frontName>test</frontName>
          </args>
      </test>
    </routers>
		<layout>
		  <updates>
			<test>
			  <file>test.xml</file>
			</test>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <Test>
        <class>Crafter_Test_Helper</class>
      </Test>
    </helpers>
	<blocks>
	  <test>
		<class>Crafter_Test_Block</class>
	  </test>
	</blocks>
    <models>
       <Test>
           <class>Crafter_Test_Model</class>
       </Test>
    </models>
  </global>
</config> 